{
  "name": "shooter-x",
  "version": "1.2.8",
  "description": "A 3D shooting game built with Three.js and Electron",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "npx electron .",
    "start-server": "node server.js",
    "build": "npx electron-builder",
    "package-win": "npx electron-packager . shooter-x --platform=win32 --arch=x64 --out=dist --overwrite",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.shooterx.game",
    "productName": "Shooter X",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "**/*",
      "!three.js-r178/three.js-r178/examples/**",
      "!three.js-r178/three.js-r178/manual/**",
      "!three.js-r178/three.js-r178/test/**",
      "!three.js-r178/three.js-r178/editor/**",
      "!three.js-r178/three.js-r178/docs/**",
      "!three.js-r178/three.js-r178/playground/**",
      "!three.js-r178/three.js-r178/utils/**",
      "!three.js-r178/three.js-r178/build/**",
      "!node_modules/@sentry/**",
      "!node_modules/discord.js/**",
      "!node_modules/express/**",
      "!node_modules/express-rate-limit/**",
      "!node_modules/cors/**",
      "!node_modules/dotenv/**",
      "!**/*.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/icon.ico"
    },
    "extraResources": [
      {
        "from": "three.js-r178/three.js-r178/src",
        "to": "three-src"
      }
    ]
  },
  "keywords": [
    "game",
    "3d",
    "shooter",
    "three.js",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "three": "^0.160.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^17.1.2"
  },
  "optionalDependencies": {
    "@sentry/browser": "^9.37.0",
    "discord.js": "^14.21.0",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1"
  }
}